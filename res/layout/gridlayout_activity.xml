        android:layout_column="2"
        android:layout_row="4"
        android:text="３"
        android:textColor="#ffffff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/button16"
        android:layout_width="80dp"
        android:layout_height="160dp"
        android:layout_column="3"
        android:layout_row="4"
