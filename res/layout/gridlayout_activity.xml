        android:id="@+id/button12"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_column="3"
        android:layout_row="3"
        android:text="Ｃ"
        android:textColor="#ffffff"
        android:textSize="40sp" />

